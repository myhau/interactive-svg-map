{

    // Enforcing options
    // http://www.jshint.com/docs/options/#enforcing-options
    "validthis": true,
    "bitwise": true,
    "eqeqeq": true,
    "forin": true,
    "latedef": "nofunc",
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "undef": true,
    "unused": true,
    "indent": 2,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Relaxing options
    // http://www.jshint.com/docs/options/#relaxing-options

    "esnext": true,

    // - - - - - - - - - - - - - - - - - - - - - - - - - - -

    // Environments
    // http://www.jshint.com/docs/options/#environments

    "browser": true,
    "jquery": true,
    "node": true,
    "module": true
}
